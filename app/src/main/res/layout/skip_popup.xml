<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To access audio and video files you must be SignIn \n Are you sure you want to Skip this step ?"
        android:textSize="18dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/text_color"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#908e54e9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#908e54e9"/>

        <TextView
            android:id="@+id/cancle_popup1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/repple_effect"
            android:textColor="@color/text_color"/>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#908e54e9"/>

        <TextView
            android:id="@+id/delete_popup1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Skip"
            android:textSize="18dp"
            android:gravity="center"
            android:background="@drawable/repple_effect"
            android:textColor="@color/text_color"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#908e54e9"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#908e54e9"/>

</LinearLayout>