<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Test"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:background="@drawable/quizback"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:gravity="center_vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/pScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/cScore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Current Score: "
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:gravity="right"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp"
                android:elevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INSTRUCTIONS"
                        android:textStyle="bold"
                        android:layout_margin="5dp"
                        android:textColor="#222222"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1. Correct answers will be marked by green"
                        android:textSize="15sp"
                        android:textColor="#444444"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2. Incorrect answers will be marked by red"
                        android:textSize="15sp"
                        android:textColor="#444444"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3. Previous score and current score are displayed above"
                        android:textSize="15sp"
                        android:textColor="#444444"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4. Click on quit to quit Quiz"
                        android:textSize="15sp"
                        android:textColor="#444444"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5. Click on submit to submit Quiz"
                        android:textSize="15sp"
                        android:textColor="#444444"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1. Recognize the audio"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Q1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_baseline_play_arrow_24"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp">

                        <Button
                            android:id="@+id/correct1"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="वारि"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"/>

                        <Button
                            android:id="@+id/wrong1"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="भानु"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2. Recognize the audio"
                            android:layout_margin="10dp"
                            android:textSize="18sp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Q2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_baseline_play_arrow_24"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/wrong2"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="भानु"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"/>

                        <Button
                            android:id="@+id/correct2"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="वारि"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp"
                            android:layout_marginBottom="5dp"/>



                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3. Find the correct Translation"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/Q3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What is your name?"
                        android:textSize="18sp"
                        android:textColor="@color/textColor2"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <Button
                            android:id="@+id/wrong3"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="भवतः ग्रामः ?"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/correct3"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="भवतः नाम किम् ?"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4. Find the correct Translation"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/Q4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="तस्या: नाम शारदा।"
                        android:textColor="@color/textColor2"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <Button
                            android:id="@+id/correct4"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="Her name is Sharda"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="16sp"
                            android:layout_marginBottom="5dp"/>

                        <Button
                            android:id="@+id/wrong4"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="His name is Sharad"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="16sp"
                            />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5. Correct/Incorrect"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/Q5_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mother - माता"
                        android:textColor="@color/textColor2"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/Q5_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father - पिता"
                        android:textColor="@color/textColor2"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/wrong5"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="Incorrect"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/correct5"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="Correct"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="18sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6. Find correct answer"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Q6"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/correct6"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="मयूरः"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/wrong6"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="शुकः"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7. Find correct answer"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Q7"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/correct7"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="अश्वः"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/wrong7"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:text="अजः"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/background"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/que8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#e5e4e2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8. Find correct answer"
                            android:textSize="18sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/text_color"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Q8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/ic_baseline_play_arrow_24"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <Button
                            android:id="@+id/wrong8"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/correct8"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#e5e4e2"
                            android:textAllCaps="false"
                            android:textColor="@color/textColor2"
                            android:textSize="20sp" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>






        </LinearLayout>





    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="-70dp"
        android:background="#FFFAFA">

        <Button
            android:id="@+id/quit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quit"
            android:textSize="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/red"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Submit"
            android:textSize="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/green"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            />

    </LinearLayout>



</LinearLayout>